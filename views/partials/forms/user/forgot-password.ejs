<%
forgotForm = Form.create({
    action: '/password/recovery',
    method: 'post',
    role: 'form',
    id: 'forgot-password-form',
    style: 'display: ' + (typeof showForgotPassForm !== 'undefined' && showForgotPassForm ? 'block' : 'none')
});
%>

<%- forgotForm.open() %>

<% if (locals.recoveryFail) { %>
    <p class="alert alert-danger">Perhaps you incorrectly entered your e-mail.</p>
<% } %>

<div class="form-group">
    <%- forgotForm.email().attr({
        id: 'recovery-email',
        name: 'Recovery[email]',
        class: 'form-control',
        placeholder: 'Email Address'
    }) %>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <%- forgotForm.submit().attr({
                id: 'recovery-submit',
                name: 'Recovery[submit]',
                class: 'form-control btn btn-login',
                value: 'Recovery'
            }) %>
        </div>
    </div>
</div>

<%- forgotForm.end() %>
<%
registerForm = Form.create({
    action: '/register',
    method: 'post',
    role: 'form',
    id: 'register-form',
    style: 'display: ' + (typeof showRegisterForm !== 'undefined' && showRegisterForm ? 'block' : 'none')
});
%>

<%- registerForm.open() %>

<% if (locals.userExist) { %>
    <p class="alert alert-danger">Registration failed: Username or Email you entered already exists.</p>
<% } %>

<% if (locals.userRoleNotExist) { %>
    <p class="alert alert-danger">Registration failed: The user role not exist.</p>
<% } %>

<div class="form-group">
    <%- registerForm.text().attr({
        id: 'registration-username',
        name: 'Registration[username]',
        class: 'form-control',
        placeholder: 'Username'
    }) %>
</div>

<div class="form-group">
    <%- registerForm.email().attr({
        id: 'registration-email',
        name: 'Registration[email]',
        class: 'form-control',
        placeholder: 'Email Address'
    }) %>
</div>

<div class="form-group">
    <%- registerForm.select()
            .attr({
                id: 'registration-role',
                name: 'Registration[role]',
                class: 'form-control'
            })
            .setOptions(userRoles)
            .setEmpty('- select a role -')
            .render();
    %>
</div>

<div class="form-group">
    <%- registerForm.text().attr({
        id: 'registration-firstname',
        name: 'Registration[firstname]',
        class: 'form-control',
        placeholder: 'Firstname'
    }) %>
</div>

<div class="form-group">
    <%- registerForm.text().attr({
        id: 'registration-lastname',
        name: 'Registration[lastname]',
        class: 'form-control',
        placeholder: 'Lastname'
    }) %>
</div>

<div class="form-group">
    <%- registerForm.password().attr({
        id: 'registration-password',
        name: 'Registration[password]',
        class: 'form-control',
        placeholder: 'Password'
    }) %>
</div>

<div class="form-group">
    <%- registerForm.password().attr({
        id: 'registration-confirm-password',
        name: 'Registration[confirm-password]',
        class: 'form-control',
        placeholder: 'Confirm Password'
    }) %>
</div>

<div class="form-group">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <%- registerForm.submit().attr({
                id: 'registration-submit',
                name: 'Registration[submit]',
                class: 'form-control btn btn-register',
                value: 'Register Now'
            }) %>
        </div>
    </div>
</div>

<%- registerForm.end() %>